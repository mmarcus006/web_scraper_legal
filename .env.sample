# API Configuration
API_BASE_URL=https://public-api-green.dawson.ustaxcourt.gov/public-api
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1.0

# Download Configuration
PARALLEL_WORKERS=5
RATE_LIMIT_DELAY=0.2
CHUNK_SIZE=8192
MAX_CONCURRENT_DOWNLOADS=10

# Paths (relative or absolute)
DATA_DIR=./data
LOG_DIR=./logs

# Features
DOWNLOAD_PDFS=true
VERIFY_DOWNLOADS=true
SKIP_EXISTING=true
USE_COMPRESSION=true

# Date Range (YYYY-MM-DD format)
START_DATE=2020-01-01
# END_DATE defaults to today if not set

# User Agent (optional)
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Google Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here

# Milvus Vector Database Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus
MILVUS_COLLECTION=tax_court_documents

# Model Configuration
# Top performing embedding models from MTEB leaderboard
# Options: Alibaba-NLP/gte-Qwen2-7B-instruct, intfloat/e5-large-v2, BAAI/bge-large-en-v1.5
EMBEDDING_MODEL=intfloat/e5-large-v2
GEMINI_MODEL=gemini-1.5-flash

# Processing Configuration
BATCH_SIZE=100
MAX_WORKERS=8
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SIMILARITY_TOP_K=10

# Docling Configuration
ENABLE_OCR=true
ENABLE_TABLES=true
ENABLE_FORMULAS=true
ENABLE_VLM=false

# Paths
DATA_DIR=./data
DOCUMENTS_DIR=./data/documents
PROCESSED_DIR=./data/processed
VECTOR_STORE_DIR=./data/vector_store